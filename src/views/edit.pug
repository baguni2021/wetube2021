extends base.pug

block content
    h4 Update video
    form(method="POST")
        input(name="title", placeholder="Video Title", value=video.title, required)
        input(name="description", placeholder="Description", value=video.description, type="text", minlength=20, required )
        input(name="hashtags", placeholder="Hashtags, Separeated by comma.", value=video.hashtags.join(), type="text", required)
        input(value="save", type="submit")